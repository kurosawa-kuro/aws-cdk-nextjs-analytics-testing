# ==================================
# 基本設定
# ==================================
APP_ENV=development
APP_PORT=8080

# ==================================
# データベース設定
# ==================================
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_NAME=training
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}/${DB_NAME}_develop"

# ==================================
# 認証設定
# ==================================
# JWT
AUTH_JWT_SECRET=your_jwt_secret
AUTH_JWT_EXPIRES=1d

# セッション
SESSION_SECRET=your_session_secret
SESSION_MAX_AGE=86400000  # 24時間（ミリ秒）

# Cookie
COOKIE_SECRET=your_cookie_secret

# ==================================
# ストレージ設定
# ==================================
# ローカルストレージ
UPLOAD_DIR_PATH=/uploads
PUBLIC_DIR_PATH=/public
DEFAULT_AVATAR_PATH=/uploads/default_avatar.png
MAX_FILE_SIZE=5242880

# S3
USE_S3=true
STORAGE_S3_REGION=ap-northeast-1
STORAGE_S3_ACCESS_KEY=${AWS_ACCESS_KEY_ID}
STORAGE_S3_SECRET_KEY=${AWS_SECRET_ACCESS_KEY}
STORAGE_S3_BUCKET=cdkjavascript01-storage

# CDN
STORAGE_CDN_URL=https://d33yfn0pwdmrt8.cloudfront.net
STORAGE_CDN_DISTRIBUTION_ID=E31G6P9V4H8VRM

# ==================================
# AWS設定
# ==================================
USE_AWS=true
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-1
AWS_ACCOUNT_ID=985539793438

# サービスフラグ
USE_LIGHTSAIL=false
USE_CLOUDWATCH=true
ENABLE_FIREHOSE=true

# 監視設定
CLOUDWATCH_LOG_GROUP=/aws/cloudwatch-logs/cdkjavascript01-logs

# Firehose
FIREHOSE_STREAM_NAME=cdkjavascript01-stream

# Lambda
LAMBDA_SLACK_NOTIFICATION_FUNCTION=slack-notification

# ==================================
# 通知設定
# ==================================
SLACK_WEBHOOK_URL=

# ==================================
# サーバー設定
# ==================================
SERVER_PUBLIC_IP=54.150.10.10
SERVER_PRIVATE_IP=172.31.12.10

# ==================================
# アプリケーション制限
# ==================================
MAX_TITLE_LENGTH=100
MAX_CONTENT_LENGTH=1000

# ==================================
# メール設定
# ==================================
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=user
MAIL_PASSWORD=password